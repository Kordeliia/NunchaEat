<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvRepartidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_padding_min"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_padding_min">
            <ImageView
                android:id="@+id/imgPhoto"
                android:layout_width="@dimen/tracking_img_size"
                android:layout_height="@dimen/tracking_img_size"
                android:contentDescription="@string/img_contentD_repartidor"
                tools:src="@drawable/ic_person"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/tvRepartidor"
                android:layout_width="@dimen/common_padding_none"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:text="@string/tv1_tracking_fragment"
                android:layout_marginStart="@dimen/common_padding_min"
                app:layout_constraintStart_toEndOf="@id/imgPhoto"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/tvRepDistancia"
                android:layout_width="@dimen/common_padding_none"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_padding_min"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:text="@string/tv2_tracking_fragment"
                android:layout_marginStart="@dimen/common_padding_min"
                app:layout_constraintStart_toStartOf="@id/tvRepartidor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgPhoto"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFinish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_text_end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:icon="@drawable/ic_done"
                android:enabled="false"
                app:iconGravity="textEnd"
                app:layout_constraintTop_toBottomOf="@id/tvRepDistancia"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_padding_none"
        android:layout_marginBottom="@dimen/common_padding_min"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mcvRepartidor"
        />
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_padding_none"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginBottom="@dimen/common_padding_min"
        app:layout_constraintBottom_toTopOf="@+id/mcvRepartidor"
       />
</androidx.constraintlayout.widget.ConstraintLayout>